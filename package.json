{
	"name": "php-generator",
	"displayName": "PHP code generator",
	"description": "PHP code generator for vs code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:php"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "PHP code generator",
			"properties":{
				"php-code-generator.newLineBeforeBracket": {
					"type": "boolean",
					"default": true,
					"description": "Bracket on new line (Should be true to respect PSR-12)"
				}
			}
		},
		"commands": [
			{
				"command": "php-generator.generate-construct",
				"title": "Add Class Construct",
				"category": "PHP code generator"
			},
			{
				"command": "php-generator.generate-getter",
				"title": "Add Property Getter",
				"category": "PHP code generator"
			},
			{
				"command": "php-generator.generate-setter",
				"title": "Add Property Setter",
				"category": "PHP code generator"
			},
			{
				"command": "php-generator.generate-all-getters",
				"title": "Add All Getters",
				"category": "PHP code generator"
			},
			{
				"command": "php-generator.generate-all-setters",
				"title": "Add All Setters",
				"category": "PHP code generator"
			}
		],
		"menus" : {
			"editor/context": [
				{
					"when": "resourceLangId == php",
					"command": "php-generator.generate-construct",
					"group": "0_phpGenerator@0"
				},
				{
					"when": "resourceLangId == php",
					"command": "php-generator.generate-getter",
					"group": "0_phpGenerator@1"
				},
				{
					"when": "resourceLangId == php",
					"command": "php-generator.generate-setter",
					"group": "0_phpGenerator@2"
				},
				{
					"when": "resourceLangId == php",
					"command": "php-generator.generate-all-getters",
					"group": "0_phpGenerator@3"
				},
				{
					"when": "resourceLangId == php",
					"command": "php-generator.generate-all-setters",
					"group": "0_phpGenerator@4"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
